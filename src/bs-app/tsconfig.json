{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../../dist/",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": true,
    "baseUrl": "",
    "typeRoots": [
      "./typings/modules",
      "./typings/modules/firebase",
      "../../node_modules/@types",
      "../../node_modules",
      "../../node_modules/angularfire2"
      
    ],
    "paths": {
      "@angular2-material/*": [
        "../../dist/@angular2-material/*"
      ]
    },
    "types": [
      "hammerjs","firebase","angularfire2"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "../../dist",
    "skipTemplateCodegen": true,
    "debug": true
  }
}
